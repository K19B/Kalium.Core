generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("KALIUM_PRISMA_DATABASE_URL")
}

enum regMaiServer {
    JP
    Intl
    CN
}
enum maiLoginType {
    sega
    netId
    friend
}
enum permission {
    disabled
    default
    whiteListed
    admin
    owner
}
enum musicDifficulty {
    Basic
    Advanced
    Expert
    Master
    ReMaster
    Utage
}
model musicScore{
    name String @unique
    level String
    difficulty  musicDifficulty
    score Float
    dxScore Int
}
model maiData{
    id Int @unique
    server regMaiServer
    data String
}
model maiAccount{
    id Int @unique
    server regMaiServer
    loginType maiLoginType
    maiId String
    maiToken String
    maiAlterId String
    maiAlterToken String
} 
model user {
    id BigInt @unique
    username String
    firstname String
    lastname String
    level permission
    messageProcessed Int
    commandProcessed Int
    registered DateTime
    lastSeen DateTime
}
