generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("KALIUM_PRISMA_DATABASE_URL")
}

enum regMaiServer {
    JP
    Intl
    CN
}
enum maiLoginType {
    sega
    netId
    friend
}
enum permission {
    disabled
    default
    whiteListed
    admin
    owner
}
enum musicDifficulty {
    BASIC
    ADVANCED
    EXPERT
    MASTER
    ReMASTER
    UTAGE
}
enum chatType {
    private
    group
    superGroup
    channel
}

model musicScore {
    name String @unique
    level String
    difficulty musicDifficulty
    score Float
    dxScore Int
}
model maiData {
    id BigInt @unique
    server regMaiServer
    loginType maiLoginType
    data String
}
model maiAccount {
    id BigInt @unique
    server regMaiServer
    loginType maiLoginType
    maiId String
    maiToken String
    maiAlterId String
    maiAlterToken String
} 
model chat {
    id BigInt @unique
    username String
    type chatType
    firstname String?
    lastname String?
    title String?
    level permission
    messageProcessed Int
    commandProcessed Int
    registered DateTime?
    lastSeen DateTime?
    commandEnabled String[]
}
